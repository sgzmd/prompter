{
  "name": "prompter",
  "version": "1.0.0",
  "description": "A frontend application for generating structured prompts",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "deploy": "./scripts/deploy.sh"
  },
  "dependencies": {
    "@vueuse/core": "^10.7.0",
    "prettier": "^3.1.0",
    "vue": "^3.4.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^8.55.0",
    "eslint-plugin-vue": "^9.19.0",
    "jsdom": "^26.1.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
